[
    // TODO: terminalmode.
    // TODO: SPACE doesn't work in operator-pending mode.
    {
        "key": "space l",
        "command": "workbench.files.action.focusOpenEditorsView", // open
        "when": "neovim.mode != insert && ( filesExplorerFocus || editorFocus )"
    },
    {
        "key": "space l",
        "command": "workbench.action.toggleSidebarVisibility", // close
        "when": "neovim.mode != insert && openEditorsFocus"
    },
    {
        "key": "space o",
        "command": "workbench.files.action.focusFilesExplorer", // open
        "when": "neovim.mode != insert && ( openEditorsFocus || editorFocus )"
    },
    {
        "key": "space o",
        "command": "workbench.action.toggleSidebarVisibility", // close
        "when": "neovim.mode != insert && filesExplorerFocus"
    },
    {
        "key": "space f",
        "command": "workbench.action.quickOpen", // open
        "when": "neovim.mode != insert && (editorFocus || openEditorsFocus || filesExplorerFocus )"
    },
    {
        "key": "space g",
        "command": "workbench.action.findInFiles", // open
        "when": "neovim.mode != insert && (editorFocus || openEditorsFocus || filesExplorerFocus || searchResultListFocused)"
    },
    {
        "key": "escape",
        "command": "workbench.action.toggleSidebarVisibility", // close
        "when": "neovim.mode != insert && searchInputBoxFocus"
    },
    {
        "key": "escape",
        "command": "workbench.action.findInFiles", // move focus
        "when": "neovim.mode != insert && searchResultListFocused"
    },
    {
        "key": "ctrl+p",
        "command": "search.action.focusSearchList",
        "when": "searchViewletVisible && searchInputBoxFocus"
    },
    {
        "key": "ctrl+n",
        "command": "search.action.focusSearchList",
        "when": "searchViewletVisible && searchInputBoxFocus"
    },
    {
        "key": "ctrl+p",
        "command": "list.focusUp",
        "when": "searchViewletVisible && searchResultListFocused"
    },
    {
        "key": "ctrl+n",
        "command": "list.focusDown",
        "when": "searchViewletVisible && searchResultListFocused"
    }
]